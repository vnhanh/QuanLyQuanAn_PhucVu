<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_rectangle_corner">

    <RelativeLayout
        android:id="@+id/container_image"
        android:background="@color/colorTopDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_dialog"
        android:layout_marginBottom="@dimen/large_space">

        <ImageView
            android:src="@drawable/ic_ideal_comment_36dp_0dp"
            android:contentDescription="@string/description_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    
    <TextView
        android:id="@+id/txt_title"
        android:textColor="#000"
        android:textSize="@dimen/txtSize_xlarge"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/large_space"
        android:layout_marginEnd="@dimen/large_space"
        android:layout_marginBottom="@dimen/xlarge_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_message"
        android:textColor="#000"
        android:textSize="@dimen/txtSize_large"
        android:lineSpacingExtra="@dimen/xsmall_space"
        android:layout_marginStart="@dimen/large_space"
        android:layout_marginEnd="@dimen/large_space"
        android:layout_marginTop="@dimen/normal_space"
        android:layout_marginBottom="@dimen/xlarge_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>