<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="vn.edu.hcmute.ms14110050.quanlyquanan_phucvu.presentation.setup_order.SetupOrderActivity" />

        <variable
            name="viewmodel"
            type="vn.edu.hcmute.ms14110050.quanlyquanan_phucvu.presentation.setup_order.SetupOrderViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        tools:context="vn.edu.hcmute.ms14110050.quanlyquanan_phucvu.presentation.setup_order.SetupOrderActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/toolbar"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_onback"
                android:onClick="@{()->viewmodel.onClickBackButton()}"
                android:src="@drawable/ic_white_back_24dp_0dp"
                android:padding="@dimen/large_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txt_title"
                android:text="@{viewmodel.toolbarTitle}"
                android:textColor="#fff"
                android:textSize="@dimen/txtSize_xlarge"
                android:layout_marginStart="@dimen/large_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/btn_onback"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/btn_process_order"
                android:onClick="@{()->viewmodel.onClickProcessData()}"
                android:src="@drawable/ic_order_32_0"
                android:layout_marginEnd="@dimen/xxxlarge_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/btn_select_tables"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/btn_select_tables"
                android:onClick="@{()->activity.onClickAddTables()}"
                android:src="@drawable/ic_table_32_0"
                android:layout_marginEnd="@dimen/xxlarge_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/btn_select_foods"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/btn_select_foods"
                android:onClick="@{()->viewmodel.onClickSelectFoods()}"
                android:src="@drawable/ic_food_32_0"
                android:layout_marginEnd="@dimen/large_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/txt_network_disconnect"
            android:visibility="@{viewmodel.isNetworkConnected ? View.GONE : View.VISIBLE}"
            android:text="@string/internet_disconnect"
            style="@style/NetworkDisconnectTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:visibility="@{viewmodel.isMainView ? View.VISIBLE : View.INVISIBLE}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_goneMarginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_network_disconnect"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_creater"
                    android:text="@{viewmodel.creater}"
                    style="@style/TextView.RegularBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txt_created_date"
                    android:textColor="@{viewmodel.isInValidCreatedTime ? @color/colorNormalDarkRed : @color/colorBlack}"
                    android:text="@{viewmodel.createdDate}"
                    style="@style/TextView.RegularBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_creater"/>

                <TextView
                    android:id="@+id/txt_number_customer"
                    android:text="@{viewmodel.numberCustomer}"
                    style="@style/TextView.RegularBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_created_date"/>

                <ImageView
                    android:src="@drawable/ic_edit_32_4"
                    android:onClick="@{()->viewmodel.onClickNumberCustomerView()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/large_space"
                    app:layout_constraintEnd_toEndOf="@id/txt_number_customer"
                    app:layout_constraintTop_toTopOf="@id/txt_number_customer"
                    app:layout_constraintBottom_toBottomOf="@id/txt_number_customer"/>

                <TextView
                    android:id="@+id/txt_status"
                    android:text="@{viewmodel.orderStatus}"
                    style="@style/TextView.RegularBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_number_customer"/>

                <TextView
                    android:id="@+id/txt_total_cost"
                    android:text="@{viewmodel.totalCost}"
                    style="@style/TextView.RegularBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_status"/>

                <TextView
                    android:id="@+id/txt_description"
                    android:text="@{viewmodel.descriptionOrder}"
                    style="@style/TextView.RegularBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_total_cost"/>

                <View
                    android:id="@+id/line1"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_description"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_tables"
                    android:paddingTop="@dimen/normal_space"
                    android:paddingBottom="@dimen/normal_space"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line1"/>

                <View
                    android:id="@+id/line2"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerview_tables"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_foods"
                    android:paddingTop="@dimen/normal_space"
                    android:paddingBottom="@dimen/normal_space"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line2"/>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:visibility="@{viewmodel.isMainView ? View.INVISIBLE : View.VISIBLE}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_goneMarginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_network_disconnect"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>