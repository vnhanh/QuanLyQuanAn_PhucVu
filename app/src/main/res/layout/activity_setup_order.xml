<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="vn.edu.hcmute.ms14110050.quanlyquanan_phucvu.presentation.setup_order.SetupOrderActivity" />

        <variable
            name="viewmodel"
            type="vn.edu.hcmute.ms14110050.quanlyquanan_phucvu.presentation.setup_order.SetupOrderViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        tools:context="vn.edu.hcmute.ms14110050.quanlyquanan_phucvu.presentation.setup_order.SetupOrderActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/toolbar"
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_onback"
                android:onClick="@{()->viewmodel.onClickBackButton()}"
                android:src="@drawable/ic_white_back_24dp_0dp"
                android:padding="@dimen/large_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txt_title"
                android:text="@{viewmodel.toolbarTitle}"
                android:textColor="#fff"
                android:textSize="@dimen/txtSize_xlarge"
                android:layout_marginStart="@dimen/large_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/btn_onback"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/btn_process_order"
                android:onClick="@{()->viewmodel.onClickProcessData()}"
                android:text="@{viewmodel.isCreateOrder ? @string/action_create_order : @string/action_edit_order}"
                android:textColor="#fff"
                android:textSize="@dimen/txtSize_xlarge"
                android:drawableStart="@drawable/ic_white_receipt_24dp_0dp"
                android:drawablePadding="@dimen/normal_space"
                android:layout_marginEnd="@dimen/normal_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/txt_network_disconnect"
            android:visibility="@{viewmodel.isNetworkConnected ? View.GONE : View.VISIBLE}"
            android:text="@string/internet_disconnect"
            style="@style/NetworkDisconnectTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_goneMarginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_network_disconnect"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_created_date"
                    android:textColor="@{viewmodel.isCreatedDateFailed ? @color/colorNormalDarkRed : @color/colorBlack}"
                    android:text="@{viewmodel.createdDate}"
                    style="@style/TextView.RegularBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/line1"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_created_date"/>

                <RelativeLayout
                    android:id="@+id/rl_container_tables"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line1">

                    <TextView
                        android:id="@+id/txt_illustrate_input_tables"
                        android:onClick="@{()->activity.onClickAddTables()}"
                        android:text="@string/suggestion_select_tables"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        style="@style/RegularTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_tables"
                        android:layout_marginTop="@dimen/normal_space"
                        android:paddingTop="@dimen/normal_space"
                        android:paddingBottom="@dimen/normal_space"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_illustrate_input_tables"/>

                </RelativeLayout>

                <View
                    android:id="@+id/line2"
                    android:background="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_container_tables"/>

                <TextView
                    android:id="@+id/txt_illustrate_input_foods"
                    android:onClick="@{()->activity.onClickSelectFoods()}"
                    android:text="@string/suggestion_select_foods"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="@color/colorAccent"
                    style="@style/RegularTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line2"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_foods"
                    android:paddingTop="@dimen/normal_space"
                    android:paddingBottom="@dimen/normal_space"
                    android:layout_marginTop="@dimen/normal_space"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_illustrate_input_foods"/>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</layout>