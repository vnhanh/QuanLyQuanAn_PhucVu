<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="vn.edu.hcmute.ms14110050.quanlyquanan_phucvu.presentation.setup_order.food.recyclerview.viewholder.FoodVHViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/bg_border_white_rectangle_corner_small"
        android:layout_marginStart="@dimen/normal_space"
        android:layout_marginEnd="@dimen/normal_space"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginBottom="@dimen/small_space"
        android:paddingTop="@dimen/small_space"
        android:paddingBottom="@dimen/small_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_width="@dimen/size_image_food"
            android:layout_height="@dimen/size_image_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_name"
            style="@style/NormalTextView"
            android:layout_marginStart="@dimen/small_space"
            android:padding="@dimen/small_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_inventory_count"
            style="@style/NormalTextView"
            android:layout_marginStart="@dimen/small_space"
            android:padding="@dimen/small_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"/>

        <TextView
            android:id="@+id/txt_price_unit"
            style="@style/NormalTextView"
            android:padding="@dimen/small_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_inventory_count"/>

        <TextView
            android:id="@+id/txt_discount"
            style="@style/NormalTextView"
            android:padding="@dimen/small_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_price_unit"/>

        <TextView
            android:id="@+id/txt_count"
            android:visibility="@{viewmodel.count > 0 ? View.VISIBLE : View.GONE}"
            style="@style/NormalTextView"
            android:padding="@dimen/small_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_discount"/>

        <TextView
            android:id="@+id/txt_cash"
            android:visibility="@{viewmodel.count > 0 ? View.VISIBLE : View.GONE}"
            style="@style/NormalTextView"
            android:padding="@dimen/small_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_goneMarginTop="0dp"
            app:layout_constraintStart_toStartOf="@id/txt_name"
            app:layout_constraintEnd_toEndOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_count"/>

        <ImageView
            android:id="@+id/btn_order"
            android:onClick="@{()->viewmodel.onClickOrderBtn()}"
            android:src="@{viewmodel.isOrdering ? @drawable/ic_check_48dp_5dp : @drawable/ic_cart_48dp_5dp}"
            android:layout_marginTop="@dimen/small_space"
            android:layout_marginEnd="@dimen/large_space"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_goneMarginTop="@dimen/small_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_cash"/>

        <TextView
            android:id="@+id/action_view_order"
            android:visibility="@{viewmodel.isOrdering || viewmodel.count == 0 ? View.GONE : View.VISIBLE}"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/txtSize_xsmall"
            android:background="@drawable/bg_circular_red"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="@id/btn_order"
            app:layout_constraintTop_toTopOf="@id/btn_order"/>

        <EditText
            android:id="@+id/edt_count"
            android:visibility="@{viewmodel.isOrdering ? View.VISIBLE : View.GONE}"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txtSize_normal"
            android:inputType="number"
            android:layout_marginEnd="@dimen/large_space"
            android:layout_width="@dimen/width_input_food_count_order"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/btn_order"
            app:layout_constraintTop_toTopOf="@id/btn_order"
            app:layout_constraintBottom_toBottomOf="@id/btn_order"/>

    </android.support.constraint.ConstraintLayout>

</layout>