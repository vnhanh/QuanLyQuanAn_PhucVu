<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="16dp" />
                    <solid android:color="#5161C6" />
                </shape>
            </item>

            <item android:right="2dp"
                android:bottom="2dp" android:left="2dp">
