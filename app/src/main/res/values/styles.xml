<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:shadowColor">#a8a8a8</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.7</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:shadowColor">#a8a8a8</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.7</item>
    </style>

    <!--CUSTOM BASE STYLE-->
    <style name="BaseButton" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/txtSize_large</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="RegularBox">
        <item name="android:background">@drawable/bg_white_rectangle_corner_normal</item>
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
    </style>

    <style name="RegularTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/txtSize_large</item>
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
    </style>

    <style name="TextView.RegularBox" parent="@style/RegularTextView">
        <item name="android:background">#fff</item>
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
    </style>

    <style name="TextView.RectangleBox" parent="@style/RegularTextView">
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
    </style>

    <style name="NormalTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/txtSize_normal</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="NormalTextView.Padding" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/txtSize_large</item>
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/small_space</item>
        <item name="android:paddingBottom">@dimen/small_space</item>
    </style>

    <style name="NetworkDisconnectTextView" parent="@android:style/TextAppearance">
        <item name="android:background">#ff0000</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/txtSize_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
    </style>

    <!--ACTIVITY LOGIN-->
    <style name="BaseTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#fff</item><!--hint khi bình thường-->
    </style>

    <style name="TextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ErrorTextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorLightRed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalErrorTextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorLightRed</item>
        <item name="android:textSize">@dimen/txtSize_normal</item>
    </style>

    <style name="TextInputLayoutLogin" parent="BaseTextInputLayout">
        <item name="android:layout_marginBottom">@dimen/xxlarge_space</item>
    </style>

    <style name="EditTextLoginView" parent="Widget.AppCompat.EditText"><!--đổi style parent-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/txtSize_large</item>
    </style>

    <style name="AutheticationSubmitButton" parent="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/xlarge_space</item>
    </style>

    <!--USER FOR FRAGMENT ACCOUNT-->

    <style name="BaseEditTextAccount" parent="Widget.AppCompat.EditText"><!--đổi style parent-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">@dimen/normal_space</item>
        <item name="android:paddingTop">@dimen/small_space</item>
        <item name="android:paddingBottom">@dimen/small_space</item>
        <item name="android:textColor">@color/colorTextFragAcc</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextAccount" parent="BaseEditTextAccount"><!--đổi style parent-->
        <item name="android:textSize">@dimen/txtSize_large</item>
    </style>

    <style name="NormalEditTextAccount" parent="Widget.AppCompat.EditText"><!--đổi style parent-->
        <item name="android:textSize">@dimen/txtSize_normal</item>
    </style>

    <style name="AddressEditTextAccount" parent="Widget.AppCompat.EditText"><!--đổi style parent-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorTextFragAcc</item>
        <item name="android:textColorHint">#000</item>
        <item name="android:textSize">@dimen/txtSize_large</item>
    </style>

    <style name="EditAccountButton" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_acc_button</item>
    </style>

    <style name="AccTextInputLayoutStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#002cda</item>
        <item name="android:textSize">@dimen/txtSize_normal</item>
    </style>

    <!--DIALOG VERIFY PASSWORD - NÚT SUBMIT-->
    <style name="ButtonVerifyPasswordDialog" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_large</item>
    </style>

    <!--ANIM DIALOG-->
    <style name="FadeScaleAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_scale_in</item>
        <item name="android:windowExitAnimation">@anim/fade_scale_out</item>
    </style>

    <style name="UpDownAnimation">
        <item name="android:windowEnterAnimation">@anim/fast_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/fast_slide_out_top</item>
    </style>

    <style name="MaterialButton.Submit" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_submit_button_corner_normal</item>
    </style>

    <style name="MaterialButton.Cancel" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_cancel_button_corner_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorIndigo</item>
        <item name="colorControlActivated">@color/colorIndigo</item>
    </style>
    
    <style name="ImagesSwitchCompat">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <!--FRAGMENT FOOD ORDER-->
    <style name="FoodOrderTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/large_space</item>
        <item name="android:paddingTop">@dimen/normal_space</item>
        <item name="android:paddingBottom">@dimen/normal_space</item>
    </style>

    <!--ACTIVITY VIEW FOOD-->
    <style name="BlurTextView" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/bg_light_gray</item>
        <item name="android:alpha">0.8</item>
        <item name="android:padding">@dimen/normal_space</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/txtSize_large</item>
    </style>

    <style name="ColoredButton.Corner" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_rectangle_accent_corner</item>
    </style>

    <style name="ColoredButton.Orange" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_orange_rectangle</item>
    </style>

    <style name="LineTextView" parent="@android:style/TextAppearance">
        <item name="android:paddingTop">@dimen/small_space</item>
        <item name="android:paddingBottom">@dimen/small_space</item>
    </style>

    <style name="LabelTextView" parent="LineTextView">
        <item name="android:paddingStart">@dimen/large_space</item>
        <item name="android:paddingEnd">@dimen/small_space</item>
        <item name="android:textSize">@dimen/txtSize_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentTextView" parent="LineTextView">
        <item name="android:paddingStart">@dimen/small_space</item>
        <item name="android:paddingEnd">@dimen/xhuge_large_space</item>
        <item name="android:textSize">@dimen/txtSize_normal</item>
    </style>

</resources>
